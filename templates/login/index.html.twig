<!DOCTYPE html>
<html lang="fr">
<head>
    <title>eFac - Authentification</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ asset('tmplog/images/icons/favicon.ico') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/vendor/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/fonts/font-awesome-4.7.0/css/font-awesome.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/fonts/Linearicons-Free-v1.0.0/icon-font.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/vendor/animate/animate.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/vendor/css-hamburgers/hamburgers.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/vendor/animsition/css/animsition.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/vendor/select2/select2.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/vendor/daterangepicker/daterangepicker.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/css/util.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('tmplog/css/main.css') }}">
</head>
<body style="background-color: #666666;">

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">

            <form action="{{ path('app_login') }}" method="post" class="login100-form validate-form">

                <span class="login100-form-title p-b-43">Veuillez saisir vos identifiants de connexion</span>

                {% if error %}
                    <div class="txtError">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if messageErrorCli is defined and messageErrorCli is not null %}
                    <div class="txtError">{{ messageErrorCli }}</div>
                {% endif %}


                <div class="wrap-input100 validate-input" data-validate = "Email invalide">
                    <input class="input100" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email" required>
                    <span class="focus-input100"></span>
                    <span class="label-input100">Email</span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Mot de passe obligatoire">
                    <input class="input100" type="password" id="password" name="_password" placeholder="Mot de passe..." required>
                    <span class="focus-input100"></span>
                    <span class="label-input100">Mot de passe</span>
                </div>

                <div style="text-align: center">
                    <a href="{{ path('app_forget_password') }}" class="txt1">Mot de passe oublié ?</a><br />
                    <a href="#" class="txt1">Créer votre compte eFac</a>
                    <br /><br />
                </div>

                <div class="container-login100-form-btn">
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    <button class="login100-form-btn" type="submit">Identifiez-vous</button>
                </div>

            </form>

            <div class="login100-more" style="background-image: url('{{ asset('tmplog/images/bg-01.jpg') }}');"></div>
        </div>
    </div>
</div>


<script src="{{ asset('tmplog/vendor/jquery/jquery-3.2.1.min.js') }}"></script>
<script src="{{ asset('tmplog/vendor/animsition/js/animsition.min.js') }}"></script>
<script src="{{ asset('tmplog/vendor/bootstrap/js/popper.js') }}"></script>
