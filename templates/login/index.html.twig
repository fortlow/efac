<script src="{{ asset('tmplog/vendor/daterangepicker/moment.min.js') }}"></script>
<script src="{{ asset('tmplog/vendor/daterangepicker/daterangepicker.js') }}"></script>
<script src="{{ asset('tmplog/vendor/countdowntime/countdowntime.js') }}"></script>
<script src="{{ asset('tmplog/js/main.js') }}"></script>

</body>
</html>