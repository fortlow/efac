{% extends 'base.html.twig' %}

{% block title %}eFac | Utilisateur - Mon compte {% endblock %}

{% block content %}

    <section id="service-details" class="service-details section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row" style="text-align: center">
                <div class="col-lg-12 mx-auto" style="text-align: center">
                    <div class="service-sidebar">

                        <div class="privacy-section" data-aos="fade-up" data-aos-delay="300">
                            <h3>Utilisateur - Mon compte</h3>
                        </div>

                        {% if app.user.roles is defined and app.user.roles is not null and app.user.roles[0] in ['ROLE_ADMIN', 'ROLE_MANAGER'] %}
                            <!-- .sous-menu rubrique -->
                            <div class="meta-bottom" style="text-align: center; margin-bottom: 2em;">
                                <div class="share-section">
                                    <div class="social-links">
                                        <a href="{{ path('app_user') }}" title="Liste utilisateurs"><i class="bi bi-people h3"></i></a>
                                    </div>
                                </div>
                            </div>
                            <!-- .sous-menu rubrique -->
                        {% endif %}

                        <div class="quick-contact-card" data-aos="slide-up" data-aos-delay="200">
                            <div class="contact-header">
                                <h4>Pour modifier vos données personnelles</h4>
                                <p>Veuillez modifier le formulaire ci-dessous.</p>
                            </div>

                            {{ form_start(form) }}
                            {% if form is defined and form is not null %}
                                <div class="row">
                                    <div class="col-lg-12">
                                        <!-- begin form -->
                                        <div class="row formRow" style="text-align: left">
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    {{ form_row(form.lastname) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    {{ form_row(form.firstname) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    {{ form_row(form.position) }}
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    {{ form_row(form.email) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    {{ form_row(form.photo) }}
                                                </div>
                                            </div>
                                            <div class="col-lg-2">
                                                <div class="form-group" style="margin-top: 2em;">
                                                    {% if user.photo is defined and user.photo is not null and user.photo|length > 0 %}
                                                        <img src="{{ asset('img/photo/' ~ user.photo) }}" class="imgRounded" alt="{{ app.user.firstname }}" width="60" height="60" style="margin-right: 5px;">
                                                    {% endif %}
                                                </div>
                                            </div>

                                            <div class="row" style="background-color: #a6ccf7">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        {{ form_row(form.new_password.first) }}
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        {{ form_row(form.new_password.second) }}
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <!-- end form -->
                                        <div class="btnrow row mx-auto gap-4">
                                            <input type="hidden" id="password" name="password" value="{{ user.password }}">
                                            <button type="submit" class="btn-submit">
                                                <span>Valider pour modifier vos données personnelles</span>
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

