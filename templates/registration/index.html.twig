{% extends 'base.html.twig' %}

{% block title %}eFac | Liste des utilisateurs{% endblock %}

{% block content %}

    <!-- .dynamic content -->
    <section id="privacy" class="privacy section">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-12 mx-auto">
                    <div class="privacy-content">

                        <div class="privacy-section" data-aos="fade-up" data-aos-delay="300" style="text-align: center">
                            <h3>Utilisateurs</h3>
                        </div>

                        <!-- .sous-menu rubrique -->
                        {% if app.user.roles is defined and app.user.roles is not null and app.user.roles[0] in ['ROLE_ADMIN', 'ROLE_MANAGER'] %}
                            <div class="meta-bottom" style="text-align: center;">
                                <div class="share-section">
                                    <div class="social-links">
                                        <a href="{{ path('app_add_user') }}" title="Ajouter un utilisateur"><i class="bi bi-person-add h3"></i></a>
                                    </div>
                                </div>

                            </div>
                        {% endif %}
                        <!-- .sous-menu rubrique -->

                        <!-- start table -->
                        <table id="myTable" class="display">
                            <thead>
                            <tr>
                                <th style="width: 2%">#</th>
                                <th style="width: 20%">Nom</th>
                                <th style="width: 15%">Prénom</th>
                                <th style="width: 21%">Email</th>
                                <th style="width: 10%">Rôle</th>
                                <th style="width: 13%; text-align: center" title="Date de la dernière connexion">Connecté(e)</th>
                                <th style="width: 13%; text-align: center" title="Date de la dernière déconnexion">Déconnecté(e)</th>
                                <th style="width: 6%; text-align: center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if users is defined and users is not null and users|length > 0 %}
                                {% set nb = 1 %}
                                {% for user in users %}
                                    <tr class="odd">
                                        <td class="odd" style="vertical-align: middle">{{ nb }}</td>
                                        <td class="odd" style="vertical-align: middle">
                                            {% if user.photo is defined and user.photo is not null and user.photo|length > 0 %}
                                                {% if verififphotoexist(user.photo) %}
                                                    <img src="{{ asset('img/photo/' ~ user.photo) }}" alt="{{ user.firstname }}" class="imgRounded" width="40" height="40" style="margin-right: 5px;">
                                                {% else %}
                                                    <img src="{{ asset('img/photo/jdoe.png') }}" alt="{{ user.firstname }}" class="imgRounded" width="40" height="40">
                                                {% endif %}
                                            {% else %}
                                                <img src="{{ asset('img/photo/jdoe.png') }}" alt="{{ user.firstname }}" class="imgRounded" width="40" height="40">
                                            {% endif %}
                                            {{ user.lastname }}
                                        </td>
                                        <td class="odd" style="vertical-align: middle">{{ user.firstname }}</td>
                                        <td class="odd" style="vertical-align: middle">{{ user.email }}</td>
                                        <td class="odd" style="vertical-align: middle">
                                            {% if user.roles[0] is defined and user.roles[0] is not null %}
                                                {% if user.roles[0] == 'ROLE_ADMIN' %}
                                                    Administrateur
                                                {% elseif user.roles[0] == 'ROLE_MANAGER' %}
                                                    Gestionnaire
                                                {% elseif user.roles[0] == 'ROLE_SALE' %}
                                                    Commercial(e)
                                                {% else %}
                                                    Visiteur
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td class="odd" style="vertical-align: middle; text-align: center">
                                            {% if user.startcnxAt is defined and user.startcnxAt is not null %}
                                                {{ user.startcnxAt|date('d/m/y H:i') }}
                                            {% endif %}
                                        </td>
                                        <td class="odd" style="vertical-align: middle; text-align: center">
                                            {% if user.lastcnxAt is defined and user.lastcnxAt is not null %}
                                                {{ user.lastcnxAt|date('d/m/y H:i') }}
                                            {% endif %}
                                        </td>
                                        <td class="odd" style="vertical-align: middle; text-align: center">
                                            {% if app.user.roles is defined and app.user.roles is not null and app.user.roles[0] in ['ROLE_ADMIN','ROLE_MANAGER'] %}
                                                <a href="{{ path('app_edit_user', {'id':user.id }) }}" title="Modifier"><i class="bi bi-pencil-square h3"></i></a>
                                            {% endif %}

                                            {% if app.user.roles is defined and app.user.roles is not null and 'ROLE_ADMIN' in app.user.roles %}
                                                <a href="{{ path('app_delete_user', {'id':user.id }) }}" title="Supprimer" style="margin-left: .4em; color: orangered"><i class="bi bi-trash3 h4"></i></a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% set nb = (nb + 1) %}
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                        <!-- end table -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.dynamic content -->
{% endblock %}