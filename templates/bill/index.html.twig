{% extends 'base.html.twig' %}

{% block title %}eFac | Liste des factures{% endblock %}

{% block content %}

    <!-- .dynamic content -->
    <section id="privacy" class="privacy section">
        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-12 mx-auto">
                    <div class="privacy-content">

                        <div class="privacy-section" data-aos="fade-up" data-aos-delay="300" style="text-align: center">
                            <h3>Facture - Liste</h3>
                        </div>

                        <!-- .sous-menu rubrique -->
                        {# if app.user.roles is defined and app.user.roles is not null and app.user.roles[0] in ['ROLE_ADMIN', 'ROLE_MANAGER', 'ROLE_SALE'] #}
                            <div class="meta-bottom" style="text-align: center;">
                                <div class="share-section">
                                    <div class="social-links" style="vertical-align: middle">
                                        <a href="{{ path('app_proforma') }}" title="Listing des proformas" style="margin-left: 5px"><i class="bi bi-file-earmark-ruled h3"></i></a>
                                        <span class="ml-3">&nbsp;</span>
                                        <a href="{{ path('app_bill_add') }}" title="Créer une facture"><i class="bi bi-file-earmark-plus h3"></i></a>
                                    </div>
                                </div>

                            </div>
                        {# endif #}
                        <!-- .sous-menu rubrique -->

                        <!-- start table -->
                        <table id="myTable" class="display">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th style="width:7%; text-align: center" class="filter1">Numéro</th>
                                <th style="width:8%; text-align: center" class="filter2" >Émission</th>
                                <th style="width:14%">Objet</th>
                                <th style="width:14%" class="filter3">Client</th>
                                <th style="width:8%; text-align: center" title="Total hors taxes">T. HT</th>
                                <th style="width:8%; text-align: center">TVA</th>
                                <th style="width:8%; text-align: center">CSS</th>
                                <th style="width:8%; text-align: center">TPS</th>
                                <th style="width:8%; text-align: center" title="Total toutes taxes comprises">T. TTC</th>
                                <th style="width:7%; text-align: center" title="Mode de paiement">M. paie.</th>
                                <th style="width:7%; text-align: center">Statut</th>
                                <th style="width:6%; text-align: center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if bills is defined and bills is not null and bills|length > 0 %}
                                {% set nb = 1 %}
                                {% for bill in bills %}

                                    {% set mntHT = 0  %}
                                    {% set mntTVA = 0  %}
                                    {% set mntCSS = 0  %}
                                    {% set mntTPS = 0  %}
                                    {% set mntTTC = 0  %}

                                    {% for line in bill.lineBills %}
                                        {% set mntHT = (mntHT + line.amountHt)  %}
                                    {% endfor %}

                                    {% if bill.prctDiscount is defined and bill.prctDiscount is not null %}
                                        {% set mntDiscount = ((mntHT * bill.prctDiscount)/100) %}
                                        {% set mntHT = (mntHT - mntDiscount) %}
                                    {% endif %}

                                    {% if bill.isWithoutTva is defined and bill.isWithoutTva is not null and bill.isWithoutTva == true %}
                                        {% set mntTTC = mntHT  %}
                                    {% endif %}

                                    {% if bill.isWithTps is defined and bill.isWithTps is not null and bill.isWithTps == true %}
                                        {% set mntTPS = ((bill.wfAmount * 9.5)/100) %}
                                        {% set mntHT = (mntHT + bill.wfAmount) %}
                                        {% set mntTTC = (mntHT - mntTPS) %}
                                    {% else %}
                                        {% if bill.isWithoutTva is defined and bill.isWithoutTva is not null and bill.isWithoutTva == true %}
                                            {% set mntTTC = mntHT  %}
                                        {% else %}
                                            {% set mntTVA = (mntHT * 18)/100  %}
                                            {% set mntCSS = (mntHT * 1)/100   %}
                                            {% set mntTTC = (mntHT + mntTVA + mntCSS)  %}
                                        {% endif %}
                                    {% endif %}

                                    {% if bill.isWithTps is defined and bill.isWithTps is not null and bill.isWithTps == false and bill.wfAmount is defined and bill.wfAmount is not null %}
                                        {% set mntHT = (mntHT + bill.wfAmount) %}
                                        {% set mntTVA = (mntHT * 18)/100  %}
                                        {% set mntCSS = (mntHT * 1)/100   %}
                                        {% set mntTTC = (mntHT + mntTVA + mntCSS) %}
                                    {% endif %}

                                    <tr>
                                        <td class="odd">{{ nb }}</td>
                                        <td class="odd">{{ bill.numero }}</td>
                                        <td class="odd" style="text-align: center" data-sort='{{ bill.createdAt|date('Ymd') }}'>
                                            {% if bill.createdAt is defined and bill.createdAt is not null %}
                                                {{ bill.createdAt|date('d/m/y') }}
                                            {% endif %}
                                        </td>
                                        <td class="odd">
                                            <small>
                                            {% if bill.subject is defined and bill.subject is not null %}
                                                {{ bill.subject|upper }}
                                            {% endif %}
                                            </small>
                                        </td>
                                        <td class="odd">
                                            <small>{{ bill.client.sreason|upper }}</small>
                                        </td>
                                        <td class="odd" style="text-align: right">
                                            {{ mntHT|number_format(0, '.', ' ') }}
                                        </td>
                                        <td class="odd" style="text-align: right">
                                            {{ mntTVA|number_format(0, '.', ' ') }}
                                        </td>
                                        <td class="odd" style="text-align: right">
                                            {{ mntCSS|number_format(0, '.', ' ') }}
                                        </td>
                                        <td class="odd" style="text-align: right">
                                            {{ mntTPS|number_format(0, '.', ' ') }}
                                        </td>
                                        <td class="odd" style="text-align: right">
                                            {{ mntTTC|number_format(0, '.', ' ') }}
                                        </td>
                                        <td class="odd" style="text-align: center">
                                            <small>
                                            {% if bill.paymentMethod is defined and bill.paymentMethod is not null %}
                                                {{ bill.paymentMethod.label }}
                                            {% endif %}
                                            </small>
                                        </td>
                                        <td class="odd" style="text-align: center">
                                            <small>
                                            {% if bill.statusBill is defined and bill.statusBill is not null %}
                                                {{ bill.statusBill.label }}
                                            {% endif %}
                                            </small>
                                        </td>
                                        <td class="odd text-nowrap" style="text-align: center">

                                            {# if app.user.roles is defined and app.user.roles is not null and app.user.roles[0] in ['ROLE_ADMIN','ROLE_MANAGER', 'ROLE_SALE'] #}
                                                <a href="{{ path('app_bill_edit', {'id':bill.id}) }}" title="Modifier" style="margin-left: .2em;"><i class="bi bi-pencil-square h5"></i></a>
                                            {# endif #}

                                            <a href="{{ path('app_bill_view_bill', {'id':bill.id}) }}" title="Voir la facture en PDF" style="margin-left: .2em;" target="_blank"><i class="bi bi-file-earmark-pdf h5"></i></a>

                                            {# if app.user.roles is defined and app.user.roles is not null and 'ROLE_ADMIN' in app.user.roles #}
                                                <a href="{{ path('app_bill_send_bill', {'id':bill.id}) }}" title="Envoyer la facture en PDF par mail" style="margin-left: .2em;"><i class="bi bi-envelope-arrow-up h5"></i></a>
                                                <a href="{{ path('app_bill_delete', {'id':bill.id}) }}" title="Supprimer" style="margin-left: .2em; color: orangered"><i class="bi bi-trash3 h5"></i></a>
                                            {# endif #}
                                        </td>
                                    </tr>
                                    {% set nb = (nb + 1) %}
                                {% endfor %}
                            {% endif %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th colspan="5"></th>
                                <th style="text-align: right"></th>
                                <th style="text-align: right"></th>
                                <th style="text-align: right"></th>
                                <th style="text-align: right"></th>
                                <th style="text-align: right"></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            </tfoot>
                        </table>
                        <br /><i><small style="color: red">Tous les montants sont en F. CFA</small></i>
                        <!-- end table -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.dynamic content -->
{% endblock %}

