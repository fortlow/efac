{% extends 'base2.html.twig' %}

{% block title %}eFac | Mot de passe oublié {% endblock %}

{% block content %}

    <section id="service-details" class="service-details section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row" style="text-align: center">
                <div class="col-lg-12 mx-auto" style="text-align: center">
                    <div class="service-sidebar">

                        <div class="privacy-section" data-aos="fade-up" data-aos-delay="300">
                            <h3>Mot de passe oublié</h3>
                        </div>

                        <div class="quick-contact-card" data-aos="slide-up" data-aos-delay="200">
                            <div class="contact-header">
                                {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
                                    {% for message in messages %}
                                        <span style="font-size: 12px" class="alert alert-{{ label }}" role="alert">{{ message }}</span><br /><br /><br />
                                    {% endfor %}
                                {% endfor %}

                                {% if error is defined and error is not null %}
                                    <span class="alert alert-danger" style="font-size: 13px; padding: 8px">{{ error.messageKey | trans(error.messagedata, 'security') }}</span><br />
                                {% endif %}
                            </div>

                            {% if form is defined and form is not null %}
                                {{ form_start(form) }}
                                    <div class="row">

                                        <div class="col-lg-12">
                                            <!-- begin form -->
                                            <div class="row formRow" style="text-align: left">

                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        {{ form_row(form.email) }}
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- end form -->
                                            <div class="btnrow row mx-auto gap-4">
                                                <button type="submit" class="btn-submit">
                                                    <span>Valider</span>
                                                    <i class="bi bi-arrow-right"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}