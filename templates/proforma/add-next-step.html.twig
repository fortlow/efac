{% extends 'base.html.twig' %}

{% block title %}eFac | Proforma - Créer une proforma - Etape 2 {% endblock %}

{% block content %}

    <section id="service-details" class="service-details section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row" style="text-align: center">
                <div class="col-lg-12 mx-auto" style="text-align: center">
                    <div class="service-sidebar">

                        <div class="privacy-section" data-aos="fade-up" data-aos-delay="300">
                            <h3>Proforma - Nouvelle proforma - étape 2 (fin)</h3>
                        </div>

                        {% if app.user.roles is defined and app.user.roles is not null and app.user.roles[0] in ['ROLE_ADMIN', 'ROLE_GESTIONNAIRE','ROLE_COMMERCIAL'] %}
                            <!-- .sous-menu rubrique -->
                            <div class="meta-bottom" style="text-align: center; margin-bottom: 2em;">
                                <div class="share-section">
                                    <div class="social-links">
                                        <a href="{{ path('app_proforma') }}" title="Listing des proformas" style="margin-left: 5px"><i class="bi bi-file-earmark-spreadsheet-fill h3"></i></a>
                                        <a href="#" title="Listing des factures"><i class="bi bi-file-ruled-fill h3"></i></a>
                                    </div>
                                </div>
                            </div>
                            <!-- .sous-menu rubrique -->
                        {% endif %}

                        <div class="quick-contact-card" data-aos="slide-up" data-aos-delay="200">
                            <div class="contact-header">
                                <h4>L'ajout d'une nouvelle proforma se fait en deux étapes :</h4>
                                <p>La création de l'entête de la proforma et la saisie des détails de la proforma.</p>
                            </div>

                            {#
                            {{ form_start(form) }}
                            {% if form is defined and form is not null %}
                            #}
                                <div class="row">
                                    <div class="col-lg-12">
                                        <!-- begin form -->
                                        {% if proforma is defined and proforma is not null and produits is defined and produits is not null and services is defined and services is not null %}
                                            <form action="{{ path('app_proforma_add_next', { 'id':idproforma, 'mode':mode }) }}" method="post">

                                                {% include '/proforma/in/_product_service.html.twig' %}

                                                <!-- .sous-menu bas rubrique -->
                                                <div class="row">
                                                    <div class="col-lg-6" style="text-align: left; margin-bottom: 2em;">
                                                        <a href="#" title="Ajouter une ligne" style="color: navy; margin-left: 5px" onclick="addLine()"><i class="bi bi-plus-square-dotted h2"></i></a>
                                                        <a href="#" title="Supprimer une ligne" style="color: darkred" onclick="deleteLine()"><i class="bi bi-dash-square-dotted h2"></i></a>
                                                    </div>
                                                    <div class="col-lg-6" style="text-align: right; margin-bottom: 2em;">
                                                        <a href="#" title="Ajouter un intercalaire" style="color: navy; margin-left: 5px" onclick="addInterca()"><i class="bi bi-plus-square-dotted h2"></i></a>
                                                        <a href="#" title="Supprimer un intercalaire" style="color: darkred" onclick="deleteInterca()"><i class="bi bi-dash-square-dotted h2"></i></a>
                                                    </div>
                                                </div>
                                                <!-- .sous-menu rubrique -->

                                                <div class="row">
                                                    <div class="col-lg-12"><div><span style="color: darkred">*</span> : champ obligatoire</div></div>
                                                    <div class="btnrow row mx-auto gap-4">
                                                        <input name="idproforma" id="idproforma" type="hidden" value="{{ proforma.id }}">
                                                        <input name="nbline" id="nbline" type="hidden" value="1">
                                                        <input name="interca" id="interca" type="hidden" value="0">
                                                        <input name="mode" id="mode" type="hidden" value="{{ mode }}">
                                                        {#
                                                        <button type="submit" class="sbumitbtn rounded-3 shadow mx-auto ms-lg-0 ms-xl-0 ms-md-0" title="Valider">Valider</button>
                                                        <button type="reset" class="clearbtn rounded-3 shadow mx-auto me-xl-0 me-lg-0 me-md-0" title="Vider les champs du formulaire">Annuler</button>
                                                        #}
                                                    </div>
                                                </div>

                                                <div class="btnrow row mx-auto gap-4">
                                                    <button type="submit" class="btn-submit">
                                                        <span>Valider pour créer la proforma</span>
                                                        <i class="bi bi-arrow-right"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        {% endif %}
                                        <!-- end form -->
                                    </div>
                                </div>
                            {#
                            {% endif %}
                            {{ form_end(form) }}
                            #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('select').forEach(function (selectElement) {
                new TomSelect(selectElement, {
                    sortField: {
                        field: "text",
                        direction: "asc"
                    }
                });
            });
        });
    </script>
{% endblock %}

